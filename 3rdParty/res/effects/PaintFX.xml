<?xml version="1.0" encoding="utf-8"?>

<LeoFX>
    <CopyStates>res/effects/DefaultStates.xml</CopyStates>

    <Program>
        <VertexShader>
            <Main>res/shaders/PaintShader.vs</Main>
        </VertexShader>
        <FragmentShader>
            <Include>res/shaders/Common.glsl</Include>
            <Main>res/shaders/PaintShader.fs</Main>
        </FragmentShader>
    </Program>
    
    <DepthState>
        <DepthTestEnabled>false</DepthTestEnabled>
        <DepthWriteEnabled>false</DepthWriteEnabled>
    </DepthState>
    
    <BlendState>
        <BlendEnabled>1</BlendEnabled>
        <BlendOpRGB>add</BlendOpRGB>
        <BlendSrcRGB>srcAlpha</BlendSrcRGB>
        <BlendDstRGB>oneMinusSrcAlpha</BlendDstRGB>
        <BlendOpA>add</BlendOpA>
        <BlendSrcA>srcAlpha</BlendSrcA>
        <BlendDstA>dstAlpha</BlendDstA>
    </BlendState>
</LeoFX>
