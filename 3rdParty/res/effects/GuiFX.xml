<?xml version="1.0" encoding="utf-8"?>

<LeoFX>
    <CopyStates>res/effects/DefaultStates.xml</CopyStates>

    <Program>
        <VertexShader>
            <Main>res/shaders/GuiShader.vs</Main>
        </VertexShader>
        <FragmentShader>
            <Main>res/shaders/GuiShader.fs</Main>
        </FragmentShader>
    </Program>
    
    <DepthState>
        <DepthComparisonFunc>lequal</DepthComparisonFunc>
    </DepthState>

    
    <BlendState>
        <BlendEnabled>true</BlendEnabled>
        <BlendOpRGB>add</BlendOpRGB>
        <BlendSrcRGB>srcAlpha</BlendSrcRGB>
        <BlendDstRGB>oneMinusSrcAlpha</BlendDstRGB>
        <BlendOpA>add</BlendOpA>
        <BlendSrcA>srcAlpha</BlendSrcA>
        <BlendDstA>dstAlpha</BlendDstA>
    </BlendState>
</LeoFX>
