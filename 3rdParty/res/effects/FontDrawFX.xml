<?xml version="1.0" encoding="utf-8"?>

<LeoFX>
    <CopyStates>res/effects/DefaultStates.xml</CopyStates>

    <Program>
        <VertexShader>
            <Main>res/shaders/TextDraw.vs</Main>
        </VertexShader>
        <FragmentShader>
            <Main>res/shaders/TextDraw.fs</Main>
        </FragmentShader>
    </Program>
    
    <DepthState>
        <DepthComparisonFunc>lequal</DepthComparisonFunc>
		<DepthRange>0 0.0001</DepthRange>
    </DepthState>
    
    <RasterizerState>
        <CullMode>none</CullMode>
    </RasterizerState>
    
    <BlendState>
        <BlendEnabled>1</BlendEnabled>
        <BlendOpRGB>add</BlendOpRGB>
        <BlendSrcRGB>srcAlpha</BlendSrcRGB>
        <BlendDstRGB>oneMinusSrcAlpha</BlendDstRGB>
        <BlendOpA>add</BlendOpA>
        <BlendSrcA>srcAlpha</BlendSrcA>
        <BlendDstA>oneMinusSrcAlpha</BlendDstA>
    </BlendState>
</LeoFX>
