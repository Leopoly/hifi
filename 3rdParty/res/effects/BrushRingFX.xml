<LeoFX>
    <CopyStates>res/effects/DefaultStates.xml</CopyStates>

    <Program>
        <VertexShader>
            <Main>res/shaders/BrushRing.vs</Main>
        </VertexShader>
        <FragmentShader>
            <Main>res/shaders/BrushRing.fs</Main>
        </FragmentShader>
    </Program>
    
   <RasterizerState>
        <CullMode>none</CullMode>
    </RasterizerState>
    
    <BlendState>
        <BlendEnabled>1</BlendEnabled>
        <BlendOpRGB>add</BlendOpRGB>
        <BlendSrcRGB>srcAlpha</BlendSrcRGB>
        <BlendDstRGB>oneMinusSrcAlpha</BlendDstRGB>
        <BlendOpA>add</BlendOpA>
        <BlendSrcA>srcAlpha</BlendSrcA>
        <BlendDstA>oneMinusSrcAlpha</BlendDstA>
    </BlendState>
</LeoFX>
