<AppShortcuts>
    <Shortcuts>
        <Shortcut key="A" command="ToggleAntialias"></Shortcut>
        <Shortcut key="B" shift="true" command="ToggleSkyboxVisible" />
        <Shortcut key="C" shift="true" command="CreateScreenShot"></Shortcut>
        <Shortcut key="C" command="ToggleMouseCameraFixedPlaneRot" />
        <Shortcut key="D" shift="true" command="ResetCameraClosestView"></Shortcut>
        <Shortcut key="F" shift="true" command="ToggleShowInfo" />
        <Shortcut key="G" shift="true" command="ToggleGroundVisible"></Shortcut>
        <Shortcut key="H" command="ShowHelp"></Shortcut>
        <Shortcut key="K" command="ToggleObjectTransform" />
        <Shortcut key="K" shift="true" command="ToggleSurfaceApprox" onlyInCIRMI="true" />
        <Shortcut key="N" shift="true" command="CreateScreenShot" value="transparent"></Shortcut>
        <Shortcut key="O" command="ToggleCameraAutoRotMode"></Shortcut>
        <Shortcut key="R" shift="true" command="ToggleRenderStyle"></Shortcut>
        <Shortcut key="R" command="SetShapeShifterMode"></Shortcut>
        <Shortcut key="U" shift="true" command="UploadObject"></Shortcut>
        <Shortcut key="W" command="ToggleWireframe"></Shortcut>
        <Shortcut key="X" command="ResetCameraDefaultView"></Shortcut>
        <Shortcut key="Y" command="Redo"></Shortcut>
        <Shortcut key="Z" command="Undo"></Shortcut>
        <Shortcut key="+" command="IncreaseBrushSize"></Shortcut>
        <Shortcut key="-" command="DecreaseBrushSize"></Shortcut>
        <Shortcut key="+" shift="true" command="IncreaseBrushStrength"></Shortcut>
        <Shortcut key="-" shift="true" command="DecreaseBrushStrength"></Shortcut>
        <Shortcut key="*" event="press" command="EnableScaleUp" value="true"></Shortcut>
        <Shortcut key="*" event="release" command="EnableScaleUp" value="false"></Shortcut>
        <Shortcut key="/" event="press" command="EnableScaleDown" value="true"></Shortcut>
        <Shortcut key="/" event="release" command="EnableScaleDown" value="false"></Shortcut>
        <Shortcut key="left" event="press" command="SetCameraAutoRotMode" value="left true"></Shortcut>
        <Shortcut key="left" event="release" command="SetCameraAutoRotMode" value="left false"></Shortcut>
        <Shortcut key="right" event="press" command="SetCameraAutoRotMode" value="right true"></Shortcut>
        <Shortcut key="right" event="release" command="SetCameraAutoRotMode" value="right false"></Shortcut>
        <Shortcut key="up" event="press" command="SetCameraAutoRotMode" value="up true"></Shortcut>
        <Shortcut key="up" event="release" command="SetCameraAutoRotMode" value="up false"></Shortcut>
        <Shortcut key="down" event="press" command="SetCameraAutoRotMode" value="down true"></Shortcut>
        <Shortcut key="down" event="release" command="SetCameraAutoRotMode" value="down false"></Shortcut>
        <Shortcut key="1" shift="true" command="SetSimplifyMode" value="amorf" /> 
        <Shortcut key="2" shift="true" command="SetSimplifyMode" value="geometric" /> 
        <Shortcut key="3" shift="true" command="SetSimplifyMode" value="mixed" /> 
    </Shortcuts>  
      
    <Shortcuts mode="Paint">
        <Shortcut key="0" command="SetPaintColor" value="white"></Shortcut>
        <Shortcut key="1" command="SetPaintColor" value="yellow"></Shortcut>
        <Shortcut key="2" command="SetPaintColor" value="orange"></Shortcut>
        <Shortcut key="3" command="SetPaintColor" value="red"></Shortcut>
        <Shortcut key="4" command="SetPaintColor" value="green"></Shortcut>
        <Shortcut key="5" command="SetPaintColor" value="lightBlue"></Shortcut>
        <Shortcut key="6" command="SetPaintColor" value="blue"></Shortcut>
        <Shortcut key="7" command="SetPaintColor" value="pink"></Shortcut>
        <Shortcut key="8" command="SetPaintColor" value="purple"></Shortcut>
        <Shortcut key="9" command="SetPaintColor" value="brown"></Shortcut>
        <Shortcut key="C" command="SetColorPickMode"></Shortcut>
    </Shortcuts>
    
    <Shortcuts mode="Simplify">
        <Shortcut key="B" command="BeginSimplify"></Shortcut>
        <Shortcut key="+" command="changeSimplifyParam" value="0.05 length"></Shortcut>
        <Shortcut key="-" command="changeSimplifyParam" value="-0.05 length"></Shortcut>
        <Shortcut key="K" command="changeSimplifyParam" value="0.1 maxanglediff"></Shortcut>
        <Shortcut key="L" command="changeSimplifyParam" value="-0.1 maxanglediff"></Shortcut>
    </Shortcuts>
</AppShortcuts>
